{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node", "fastify", "bcrypt", "jsonwebtoken"],
    "resolveJsonModule": true,
    "outDir": "dist",
    "noImplicitAny": false

  },
  "include": ["src", "src/types"]
}
